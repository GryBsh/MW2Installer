<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MW2Installer"
        Title="MainWindow" Height="200" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="52*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Column="0" Grid.RowSpan="4" Fill="Black" />
        <Rectangle Grid.Column="1" Grid.RowSpan="4" Fill="White" Grid.ColumnSpan="2" />

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   FontFamily="Steiner" 
                   FontSize="58" 
                   Foreground="White"
                   TextAlignment="Right">
            Mech
        </TextBlock>
        <TextBlock Grid.Row="0" 
                   Grid.Column="1" 
                   FontFamily="Steiner" 
                   FontSize="58" Grid.ColumnSpan="2">
            Warrior 2
        </TextBlock>
        <TextBlock Grid.Row="1" 
                   Grid.Column="0"
                   FontFamily="Steiner" 
                   FontSize="32" 
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
            Installer
        </TextBlock>
        <Grid Grid.Row="1" 
              Grid.Column="1" 
              Grid.RowSpan="2">
      
            <TextBlock x:Name="Text" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="10,25">
                
            </TextBlock>
                
        </Grid> 
        
    </Grid>
</Window>