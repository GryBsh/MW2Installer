<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" 
        MinHeight="300" 
        MinWidth="800" 
        Height="300"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Rectangle Style="{DynamicResource LeftBackground}" Grid.Column="0" Grid.RowSpan="4" />
        <Rectangle Style="{DynamicResource RightBackground}" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="2"/>


        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   FontFamily="Steiner" 
                   FontSize="58" 
                   TextAlignment="Right"
                   Style="{DynamicResource LeftTitle}">
            Mech
        </TextBlock>
        <TextBlock Grid.Row="0" 
                   Grid.Column="1" 
                   FontFamily="Steiner" 
                   FontSize="58" 
                   Grid.ColumnSpan="2"
                   Style="{DynamicResource RightTitle}">
            Warrior 2
        </TextBlock>
        <ContentControl Grid.Row="1" 
                        Grid.Column="0" 
                        VerticalAlignment="Top"
                        ContentTemplate="{DynamicResource SubtitleTextBlock}"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid Grid.Row="1" 
                  Grid.Column="1" 
                  Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                    Select a Disc
                </TextBlock>
                <ComboBox x:Name="AvailableEditions"
                          Grid.Column="1"
                          Grid.ColumnSpan="2"
                          Width="350"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="Object">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="24"
                           Source="{Binding Icon}"/>
                                <Rectangle Width="10" />
                                <TextBlock Text="{Binding CDDrive}"/>
                                <TextBlock> -</TextBlock>
                                <TextBlock Text="{Binding CDLabel}"/>
                                <TextBlock> -</TextBlock>
                                <TextBlock Text="{Binding ProductName}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="3" 
              Grid.Column="2"
              Style="{DynamicResource BottomBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition />
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BackButton" Grid.Column="0" Margin="5">
                Cancel
            </Button>
            <Button x:Name="NextButton" Grid.Column="2" Margin="5">
                Next
            </Button>
        </Grid>
            
    </Grid>
</Window>