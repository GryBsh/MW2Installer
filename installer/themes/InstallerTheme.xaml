<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Keyed Styles -->
    <Style x:Key="LeftBackground" TargetType="Rectangle">
        <Setter Property="Fill" Value="Black"/>
    </Style>
    <Style x:Key="RightBackground" TargetType="Rectangle">
        <Setter Property="Fill" Value="White" />
    </Style>

    <Style x:Key="LeftTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="RightTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <Style x:Key="Subtitle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="Steiner" />
    </Style>

    <DataTemplate x:Key="SubtitleTextBlock">
        <TextBlock Style="{DynamicResource Subtitle}">Installer</TextBlock>
    </DataTemplate>

    <Style x:Key="BottomBackground" TargetType="Grid">
        <Setter Property="Background" Value="Black" />
    </Style>

    <!-- Global Styles-->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="Black" />
    </Style>
    <Style TargetType="Button">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="True">
                <Setter Property="Foreground" Value="LightGray"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderThickness="0" BorderBrush="Black" Background="Black">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="DarkGray"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderThickness="1" BorderBrush="Black" Background="Black">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderThickness="1" BorderBrush="White" Background="Black">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
    </Style>
</ResourceDictionary>