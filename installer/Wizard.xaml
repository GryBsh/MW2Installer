<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Height="600" Width="800" 
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="{Binding ButtonBackground}"/>
                    <Setter Property="Foreground" Value="{Binding ButtonText}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{Binding ButtonDisabledBackground}"/>
                    <Setter Property="Foreground" Value="{Binding ButtonDisabledText}" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="{Binding ButtonHoverBackground}"/>
                    <Setter Property="Foreground" Value="{Binding ButtonHoverText}" />
                </Trigger>
            </Style.Triggers> 
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="52*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Column="0" Grid.RowSpan="4" Fill="{Binding LeftBackground}" />
        <Rectangle Grid.Column="1" Grid.RowSpan="4" Fill="{Binding RightBackground}" Grid.ColumnSpan="2" />

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   FontFamily="Steiner" 
                   FontSize="58" 
                   Foreground="{Binding LeftTitle}"
                   TextAlignment="Right">
            Mech
        </TextBlock>
        <TextBlock Grid.Row="0" 
                   Grid.Column="1" 
                   FontFamily="Steiner" 
                   Foreground="{Binding RightTitle}"
                   FontSize="58" Grid.ColumnSpan="2">
            Warrior 2
        </TextBlock>
        <TextBlock Grid.Row="1" 
                   Grid.Column="0"
                   FontFamily="Steiner" 
                   FontSize="{Binding SubtitleFontSize}" 
                   Foreground="{Binding SubtitleText}"
                   TextAlignment="{Binding SubtitleAlignment}"
                   Text="{Binding Subtitle}">
            
        </TextBlock>
        <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">

            <Grid x:Name="AgreementStep"
                  Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <TextBlock FontSize="20" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{Binding Text}">
                    Welcome to the MechWarrior 2 Installer
                </TextBlock>
                <TextBox x:Name="AgreementText"   
                         Grid.Row="1"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Visible"
                         TextWrapping="WrapWithOverflow">
                </TextBox>
                <CheckBox x:Name="AcceptCheck"
                          Grid.Row="2"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Foreground="{Binding Text}">
                    I have read the above, I accept all risks, and I am ready to proceed.
                </CheckBox>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{Binding Text}">
                        Install Path
                    </TextBlock>
                    <TextBox Grid.Column="1" Margin="5,10" x:Name="InstallPath" Padding="5,5,5,4" Text="C:\Games"/>
                    <Button Grid.Column="2" 
                            x:Name="BrowseButton"
                            Margin="5,10">
                        Browse
                    </Button>
                </Grid>
            </Grid>

            <Grid x:Name="InstallStep"
                  Visibility="Hidden"
                  Margin="0,40,0,0">
                <TextBox x:Name="ActionLog"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Visible"
                />

            </Grid>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="2" Background="{Binding LeftBackground}">
            <Grid x:Name="ButtonGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Button x:Name="BackButton"
                        Grid.Column="0"
                        Margin="5">
                    Close
                </Button>
                <Button x:Name="NextButton"
                        Grid.Column="2"
                        Margin="5"
                        IsEnabled="{Binding IsChecked, ElementName=AcceptCheck}">
                    Next
                </Button>
            </Grid>
            <Grid x:Name="ProgressGrid"
                  Visibility="Hidden">
                <ProgressBar Grid.Row="1" 
                             Margin="5"
                             x:Name="ProgressBar" />

            </Grid>
        </Grid>
    </Grid>
</Window>